<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SellerRegistrationFormServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.SellerRegistrationFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddListingServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.AddListingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewActiveItemsServlets</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.ViewActiveItemsServlets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellerLoginServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.SellerLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewListingsServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.ViewListingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewListingsForUpdateAndDeleteServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.ViewListingsForUpdateAndDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveListingServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.RemoveListingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateListingServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.UpdateListingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaceAuctionServlet</servlet-name>
        <servlet-class>com.app.servlets.sellerServlets.PlaceAuctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerRegistrationFormServlet</servlet-name>
        <servlet-class>com.app.servlets.customerServlets.CustomerRegistrationFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>com.app.servlets.customerServlets.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewActiveItemsForCustomersServlet</servlet-name>
        <servlet-class>com.app.servlets.customerServlets.ViewActiveItemsForCustomersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitBidServlet</servlet-name>
        <servlet-class>com.app.servlets.customerServlets.SubmitBidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SellerRegistrationFormServlet</servlet-name>
        <url-pattern>/saveSellerData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddListingServlet</servlet-name>
        <url-pattern>/addListing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewActiveItemsServlets</servlet-name>
        <url-pattern>/viewActiveListings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellerLoginServlet</servlet-name>
        <url-pattern>/sellerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewListingsServlet</servlet-name>
        <url-pattern>/viewListings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewListingsForUpdateAndDeleteServlet</servlet-name>
        <url-pattern>/viewListingsForUpdateAndDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveListingServlet</servlet-name>
        <url-pattern>/removeListing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateListingServlet</servlet-name>
        <url-pattern>/updateListing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaceAuctionServlet</servlet-name>
        <url-pattern>/placeAuction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerRegistrationFormServlet</servlet-name>
        <url-pattern>/saveCustomerData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/customerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewActiveItemsForCustomersServlet</servlet-name>
        <url-pattern>/viewActiveItemsForCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitBidServlet</servlet-name>
        <url-pattern>/submitBid</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
